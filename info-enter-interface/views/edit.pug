extends layout

block layout-content
  div(class='main-display h-100 container p-4')
    h2(class='pb-2 pt-2')
      | Interface for
      a(href="123") my modular personal website


    div(class='form-div')
      - console.log(project)
      - var pname = project.name
      - var pdesc = project.desc
      - var id = project._id
      - var details = project.details
      - var glink = project.github
      - var website = project.website
      h3(class="") Currently editing project: <span class="text-info">#{pname}</span>
      div(class="" id="")
        form(class="was-validated" action="/doneEditProject" method="POST" new="11233")
          div(class="form-group")
            label(for="validationTextarea1") Project Name
            //- input(type="text" class="form-control text-wrap" style="height:5rem" id="projectTitle" placeholder="Enter your project name here" )
            textarea(name="pname" class="form-control " id="validationTextarea1" placeholder="Required project name textarea" maxlength="50" required )=pname
            div(class="invalid-feedback") Please enter project name in the textarea. Max length: 50 characters
          div(class="form-group")
            label(for="validationTextarea2") Project Description
            //- input(type="text" class="form-control text-wrap" id="projectContent" placeholder="Enter your project content here")
            textarea(name="pdesc" class="form-control " id="validationTextarea2" placeholder="Required project description textarea" required)=pdesc
            div(class="invalid-feedback") Please enter Project description in the textarea. Max length: 140 characters
          div(class="form-group")
            label(for="validationTextarea3") Project Details
            //- input(type="text" class="form-control text-wrap" id="projectContent" placeholder="Enter your project content here")
            textarea(name="pdetail" class="form-control " id="validationTextarea3" placeholder="Required project detail textarea" required )=details[0]
            div(class="invalid-feedback") Please enter Project details in the textarea.

          div(class="" id="")
            div(class="form-group")
              label(for="validationTextarea4") Github Link
              //- input(type="text" class="form-control text-wrap" id="projectContent" placeholder="Enter your project content here")
              input(name="github" class="form-control " type="url" id="validationTextarea4" placeholder="project detail textarea" maxlength="140" value=glink)
              div(class="invalid-feedback") (Optional) Please enter Project Github link, begin with https://.
            div(class="form-group")
              label(for="validationTextarea4") Website Link
              //- input(type="text" class="form-control text-wrap" id="projectContent" placeholder="Enter your project content here")
              input(name="website" class="form-control " type="url" id="validationTextarea4" placeholder="project detail textarea" maxlength="140" value=website)
              div(class="invalid-feedback") (Optional) Please enter Project website link, begin with https://.
            div(class="form-group")
              label(for="validationTextarea4") Project Details
              //- input(type="text" class="form-control text-wrap" id="projectContent" placeholder="Enter your project content here")
              textarea(name="detail" class="form-control " id="validationTextarea4" placeholder="project detail textarea" )=details[1]
              div(class="valid-feedback") (Optional) Please enter Project details in the textarea.
            div(class="form-group")
              label(for="validationTextarea5") Project Details
              //- input(type="text" class="form-control text-wrap" id="projectContent" placeholder="Enter your project content here")
              textarea(name="detail" class="form-control " id="validationTextarea5" placeholder="project detail textarea" )=details[2]
              div(class="valid-feedback") (Optional) Please enter Project details in the textarea.
            div(class="form-group")
              label(for="validationTextarea6") Project Details
              //- input(type="text" class="form-control text-wrap" id="projectContent" placeholder="Enter your project content here")
              textarea(name="detail" class="form-control " id="validationTextarea6" placeholder="project detail textarea" )=details[3]
              div(class="valid-feedback") (Optional) Please enter Project details in the textarea.
            div(class="form-group")
              label(for="validationTextarea7") Project Details
              //- input(type="text" class="form-control text-wrap" id="projectContent" placeholder="Enter your project content here")
              textarea(name="detail" class="form-control " id="validationTextarea7" placeholder="project detail textarea" )=details[4]
              div(class="valid-feedback") (Optional) Please enter Project details in the textarea.
            div(class="form-group")
              label(for="validationTextarea8") Project Details
              //- input(type="text" class="form-control text-wrap" id="projectContent" placeholder="Enter your project content here")
              textarea(name="pdetail" class="form-control" id="validationTextarea8" placeholder="project detail textarea" )=details[5]
              div(class="valid-feedback") (Optional) Please enter Project details in the textarea.
            div(class="form-group invisible")
              textarea(name="id" class="form-control")=id
          br
          button(type="submit" class="btn btn-outline-danger") Done Editing
